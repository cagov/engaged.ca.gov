<section id="about-page-heading">
  <div class="container">
    <h1>{{ title }}</h1>
    <img src="/public/images/about-header.svg" aria-hidden="true" class="desktop-only" alt="{{ 'about-alt-header' | i18n }}">
  </div>
</section>

{%- macro section(snippet, shaded=false) %}
<section {% if shaded -%}class="about-page-shaded"{%- endif -%}>
  <div class="container about-section-flex">
    <engca-icon-heading>
      <img src="{{ snippet.data.icon }}" aria-hidden="true">
      <h2>{{ snippet.data.title }}</h2>
    </engca-icon-heading>
    <engca-section-content>
      {{ snippet.htmlContent | safe }}
    </engca-section-content>
  </div>
</section>
{% endmacro -%}

{% set weNeedYourVoice = collections.snippets | getSnippet("about_we-need-your-voice",locale) %}
{{ section(weNeedYourVoice, shaded = false) }}

{% set youGetTheMic = collections.snippets | getSnippet("about_you-get-the-mic",locale) %}
{{ section(youGetTheMic, shaded = true) }}

{% set theProcess = collections.snippets | getSnippet("about_process",locale) %}
{{ section(theProcess, shaded = false) }}

{% set whatYouCanLearn = collections.snippets | getSnippet("about_what-you-can-learn",locale) %}
{{ section(whatYouCanLearn, shaded = true) }}

<section id="sign-up">
  <div class="container form-flex">
    <img src="/public/images/bubble-cluster-1.svg" class="signup-cluster-1" aria-hidden="true"/>
    <img src="/public/images/bubble-cluster-2.svg" class="signup-cluster-2" aria-hidden="true"/>
    {% include "form.njk" %}
  </div>
</section>