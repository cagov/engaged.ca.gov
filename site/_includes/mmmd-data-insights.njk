{% extends "layout.njk" %}
{% block content %}
<style>
.quote-card {
  background-color: #f0f0f0;
  padding: 10px;
  border-radius: 5px;
  max-width: 500px;
  {# margin: 0 auto; #}
  font-size: 1rem;
}
.plot-row {
  position: relative;
}
.quote-card {
  position: fixed;
  width: 100%;
  opacity: 0.8;
  z-index: 1000;
}
.responsive-svg-container svg {
  width: 100%;
  height: auto;
  max-width: 100%;
  position: relative;
}
.plot-title {
  font-size: 1.5rem;
  font-weight: 600;
  font-family: "Noto Sans Display" !important;
  text-align: left;
  {# max-width: 50%; #}
  {# position: absolute;
  top: 0px;
  left: 50px; #}
}
div.plot-legend {
  margin-top: 20px;
}
section.plot-section {
    padding-top: 0;
}
section#data-visualizations {
    padding-bottom: 0;
}
@media (orientation: landscape) {
  .responsive-svg-container {
    display: flex;
    flex-wrap: wrap;
  }
  
  .plot-title {
    width: 100%;
  }
  
  .plot-plot {
    width: 65%;
  }
  
  div.plot-legend {
    width: 35%;
    margin-top: 0;
    padding-left: 10px;
  }
}

</style>
