{#
formKey - (string) key in form submission
formValue - (string) value in form submission
i18nkey - (String) The key of the text string as definited in i18n.js
attributes - (String) Add a space separated list of attributes such as "checked required"
#}

{% macro merge_field_data(formKey, formValue, i8nkey, attributes) %}
  <li>
  <input type="radio" class="form-radio-input" id="{{ formKey }}-{{ formValue }}" name="{{ formKey }}" value="{{ formValue }}" {{ attributes }}>
  <label class="form-control-label form-radio-label" for="{{ formKey }}-{{ formValue }}">
    {{ i8nkey }}
  </label>
  </li>
{% endmacro %}