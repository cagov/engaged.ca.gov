      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="solutions-pagination">
          <div class="pagination-dots">
            {% for i in range(1, 11) %}
              <span class="dot{% if i == 1 %} active{% endif %}"></span>
            {% endfor %}
          </div>
          <button class="view-more-button">View more</button>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="comment-explorer">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="comment-explorer-header">
          <h2>{{ modules.comment_explorer.title }}</h2>
          <p>{{ modules.comment_explorer.intro_text }}</p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="comment-explorer-controls">
          <select class="theme-selector">
            <option>Recruitment, hiring, and retention</option>
            <option>Process improvement</option>
            <option>Technology and digital innovation</option>
            <option>Organizational structure and culture</option>
            <option>Management culture and leadership</option>
            <option>Communication and knowledge sharing</option>
            <option>Budget and resources</option>
            <option>Public-facing services and resident experience</option>
            <option>Governance and oversight</option>
            <option>Workplace operations</option>
          </select>
          <button class="filter-button">Filter</button>
          <input type="text" class="search-input" placeholder="Search">
          <button class="sort-button">Sort v</button>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="comments-container">
          <!-- Comments will be populated here from JSON -->
        </div>
        <div class="download-comments">
          <button class="download-button">Download all comments</button>
        </div>
      </div>
    </div>
  </div>
</section>

