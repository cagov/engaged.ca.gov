            <a data-appearance="button" data-theme="orange" href="#findings-and-analysis" class="m-t">{{ modules.hero.buttonText }}</a>
        </p>
      </div>
    </div>
    <img class="e3-hero-adornment" src="/public/images/findings-adornment.png" aria-hidden="true" alt="" />
  </div>
</section>

