          {% endif %}
        </div>
      </div>
      <div class="col-lg-4">
        <div class="solution-card">
          <div class="solution-icon"></div>
          <h4>{{ modules.solution_3.title }}</h4>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="solution-card">
          <div class="solution-icon"></div>
          <h4>{{ modules.solution_4.title }}</h4>
        </div>
      </div>
      <div class="col-lg-4">
