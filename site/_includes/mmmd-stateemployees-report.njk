<section id="themes-we-found">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="themes-intro">
          <h2>{{ modules.themes_we_found.title }}</h2>
          <p>{{ modules.themes_we_found.intro_text }}</p>
        </div>
        <div id="themes-bubble-chart" class="themes-bubble-chart">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 600" width="1000" height="600">
            <!-- Background -->
            <rect width="1000" height="600" fill="#F6F7FA"/>
            
            {%- for i in range(1, 11) -%}
              {%- set theme_module = "theme_" + i -%}
              {%- if modules[theme_module] -%}
                {%- set title = modules[theme_module].theme_circle_title if modules[theme_module].theme_circle_title else modules[theme_module].theme_title -%}
                {%- set lines = title.split('<LF>') -%}
                {%- set positions = [
                  {"cx": 200, "cy": 200, "r": 120, "fontSize": 15, "yOffset": 190, "dy": 18, "color": "#5489A3", "opacity": "0.8"},
                  {"cx": 450, "cy": 200, "r": 110, "fontSize": 15, "yOffset": 190, "dy": 18, "color": "#5489A3", "opacity": "0.8"},
                  {"cx": 660, "cy": 220, "r": 85, "fontSize": 14, "yOffset": 205, "dy": 16, "color": "#7BA8BC", "opacity": "0.75"},
                  {"cx": 330, "cy": 370, "r": 90, "fontSize": 13, "yOffset": 360, "dy": 15, "color": "#7BA8BC", "opacity": "0.75"},
                  {"cx": 565, "cy": 380, "r": 85, "fontSize": 13, "yOffset": 370, "dy": 15, "color": "#7BA8BC", "opacity": "0.75"},
                  {"cx": 770, "cy": 360, "r": 80, "fontSize": 13, "yOffset": 350, "dy": 15, "color": "#7BA8BC", "opacity": "0.75"},
                  {"cx": 140, "cy": 430, "r": 85, "fontSize": 14, "yOffset": 420, "dy": 16, "color": "#7BA8BC", "opacity": "0.75"},
                  {"cx": 270, "cy": 530, "r": 70, "fontSize": 11, "yOffset": 520, "dy": 14, "color": "#9BC4D4", "opacity": "0.7"},
                  {"cx": 520, "cy": 530, "r": 65, "fontSize": 12, "yOffset": 520, "dy": 14, "color": "#9BC4D4", "opacity": "0.7"},
                  {"cx": 680, "cy": 530, "r": 65, "fontSize": 12, "yOffset": 520, "dy": 14, "color": "#9BC4D4", "opacity": "0.7"}
                ] -%}
                {%- set pos = positions[i - 1] -%}
                <g class="theme-circle" data-theme="{{ i }}" style="cursor: pointer; pointer-events: all; -webkit-user-select: none; user-select: none;">
                  <circle cx="{{ pos.cx }}" cy="{{ pos.cy }}" r="{{ pos.r }}" fill="{{ pos.color }}" opacity="{{ pos.opacity }}" pointer-events="all"/>
                  <text x="{{ pos.cx }}" y="{{ pos.yOffset }}" text-anchor="middle" fill="#0f152f" font-size="{{ pos.fontSize }}" font-weight="600" font-family="Arial, sans-serif" pointer-events="none">
                    {%- for line in lines -%}
                      <tspan x="{{ pos.cx }}" dy="{% if loop.first %}0{% else %}{{ pos.dy }}{% endif %}">{{ line }}</tspan>
                    {%- endfor -%}
                  </text>
                </g>
              {%- endif -%}
            {%- endfor -%}
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="themes-deep-dive">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-header">
          <h2>{{ modules.themes_deep_dive.title }}</h2>
        </div>
      </div>
    </div>
    {% for i in range(1, 11) %}
      <div id="theme-{{ i }}-content" class="theme-content{% if i == 1 %} active{% endif %}" data-theme="{{ i }}">
        <div class="row">
          <div class="col-lg-12">
            <div class="theme-header">
              <span class="theme-number">Theme {{ i }}</span>
              <h3>{{ modules["theme_" + i].theme_title }}</h3>
            </div>
          </div>
          <div class="col-lg-8">
            <div class="theme-description">
              <p>{{ modules["theme_" + i].theme_description }}</p>
              {% if modules["theme_" + i].theme_quote %}
                <div class="theme-quote">
                  <p>{{ modules["theme_" + i].theme_quote }}</p>
                </div>
              {% endif %}
              <a href="#comment-explorer" class="theme-link">{{ modules["theme_" + i].see_more_link }}</a>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<section id="suggested-solutions">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="solutions-header">
          <h2>{{ modules.suggested_solutions.title }}</h2>
          <p>{{ modules.suggested_solutions.intro_text }}</p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4">
        <div class="solution-card">
          <div class="solution-icon"></div>
          <h4>{{ modules.solution_1.title }}</h4>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="solution-card">
          <div class="solution-icon"></div>
          <h4>{{ modules.solution_2.title }}</h4>
          {% if modules.solution_2.description %}
            <p>{{ modules.solution_2.description }}</p>
          {% endif %}
          {% if modules.solution_2.quote %}
            <div class="solution-quote">
              <p>{{ modules.solution_2.quote }}</p>
            </div>
          {% endif %}
        </div>
      </div>
      <div class="col-lg-4">
        <div class="solution-card">
          <div class="solution-icon"></div>
          <h4>{{ modules.solution_3.title }}</h4>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="solution-card">
          <div class="solution-icon"></div>
          <h4>{{ modules.solution_4.title }}</h4>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="solution-card">
          <div class="solution-icon"></div>
          <h4>{{ modules.solution_5.title }}</h4>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="solutions-pagination">
          <div class="pagination-dots">
            {% for i in range(1, 11) %}
              <span class="dot{% if i == 1 %} active{% endif %}"></span>
            {% endfor %}
          </div>
          <button class="view-more-button">View more</button>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="comment-explorer">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="comment-explorer-header">
          <h2>{{ modules.comment_explorer.title }}</h2>
          <p>{{ modules.comment_explorer.intro_text }}</p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="comment-explorer-controls">
          <select class="theme-selector">
            <option value="all">All</option>
            {% for i in range(1, 11) %}
              {% set theme_module = "theme_" + i %}
              <option value="{{ i }}"{% if i == 1 %} selected{% endif %}>{% if modules[theme_module] %}{{ modules[theme_module].theme_title }}{% else %}Theme {{ i }}{% endif %}</option>
            {% endfor %}
          </select>
          <input type="text" class="search-input" placeholder="Search">
          <select class="sort-selector">
            <option value="date" selected>Date</option>
            <option value="alpha">Alpha</option>
            <option value="theme">Theme</option>
          </select>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="comments-container">
          <!-- Comments will be populated here from JSON -->
        </div>
        <div class="download-comments">
          <button class="download-button">Download all comments</button>
        </div>
      </div>
    </div>
  </div>
</section>

