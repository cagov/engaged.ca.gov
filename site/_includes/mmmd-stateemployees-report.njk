<section id="themes-deep-dive">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-header">
          <h2>{{ modules.themes_deep_dive.title }}</h2>
        </div>
      </div>
    </div>
    {% for i in range(1, 11) %}
      <div id="theme-{{ i }}-content" class="theme-content{% if i == 1 %} active{% endif %}" data-theme="{{ i }}">
        <div class="row">
          <div class="col-lg-12">
            <div class="theme-header">
              <span class="theme-number">Theme {{ i }}</span>
              <h3>{{ modules["theme_" + i].theme_title }}</h3>
            </div>
          </div>
          <div class="col-lg-8">
            <div class="theme-description">
              <p>{{ modules["theme_" + i].theme_description }}</p>
              {% if modules["theme_" + i].theme_quote %}
                <div class="theme-quote">
                  <p>{{ modules["theme_" + i].theme_quote }}</p>
                </div>
              {% endif %}
              <a href="#comment-explorer" class="theme-link">{{ modules["theme_" + i].see_more_link }}</a>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

